{
  "name": "@tropixinc/pixchain-react-metamask",
  "version": "1.0.1",
  "description": "Blockchain signing library",
  "main": "./lib/cjs/index.js",
  "module": "./lib/esm/index.js",
  "types": "./lib/esm/index.d.ts",
  "scripts": {
    "check": "npm run check-types && npm run lint && npm run build",
    "check-types": "tsc --incremental false --noEmit",
    "lint": "eslint \"{src}/**/*.ts?(x)\" --fix",
    "format": "prettier --write \"src/**/*.ts?(x)\"",
    "build": "npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "tsc --module commonjs --outDir lib/cjs",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "git:add": "git add --all",
    "git:commit": "git-cz",
    "git": "npm run git:add && npm run git:commit"
  },
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "8.6.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "eslint-plugin-sonarjs": "0.11.0",
    "husky": "7.0.4",
    "lint-staged": "12.1.7",
    "prettier": "2.5.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "standard-version": "9.3.2",
    "typescript": "^4.0.2"
  },
  "files": [
    "/lib"
  ],
  "dependencies": {
    "@usedapp/core": "0.9.0",
    "dayjs": "1.10.7",
    "immer": "9.0.12",
    "p-memoize": "4.0.3",
    "swr": "1.1.2"
  },
  "license": "MIT",
  "author": "Mario Costa <mario@tropix.io>",
  "repository": {
    "url": "https://github.com/TropixInc/pixchain-react-metamask"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
